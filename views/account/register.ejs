<!-- views/account/register.ejs -->

<div class="container">
  <h1><%= title %></h1>

  <% if (errors && errors.array && errors.array().length > 0) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.array().forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <% if (messages && Array.isArray(messages) && messages.length > 0) { %>
    <div class="alert alert-success">
      <ul>
        <% messages.forEach(function(message) { %>
          <li><%= message %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/account/register" method="POST" novalidate>
    <div class="form-group">
      <label for="account_firstname">First Name</label>
      <input
        type="text"
        id="account_firstname"
        name="account_firstname"
        class="form-control"
        placeholder="Enter your first name"
        required
        value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>"
      >
    </div>

    <div class="form-group">
      <label for="account_lastname">Last Name</label>
      <input
        type="text"
        id="account_lastname"
        name="account_lastname"
        class="form-control"
        placeholder="Enter your last name"
        required
        value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>"
      >
    </div>

    <div class="form-group">
      <label for="account_email">Email</label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        class="form-control"
        placeholder="Enter your email"
        required
        value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
      >
    </div>

    <div class="form-group">
      <label for="account_password">Password</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        class="form-control"
        placeholder="Enter a strong password"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        aria-describedby="passwordHelp"
      >
      <small id="passwordHelp" class="form-text text-muted">
        Password must be at least 12 characters, include 1 uppercase letter, 1 number, and 1 special character.
      </small>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>
