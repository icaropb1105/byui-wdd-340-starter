<h1>Update Account Information</h1>

<form action="/account/update-account" method="post">
  <div class="form-group" style="display: flex; gap: 1rem;">
    <div style="flex: 1;">
      <label for="first_name">First Name</label>
      <input type="text" id="first_name" name="first_name" value="<%= account.account_firstname %>" required />
    </div>

    <div style="flex: 1;">
      <label for="last_name">Last Name</label>
      <input type="text" id="last_name" name="last_name" value="<%= account.account_lastname %>" required />
    </div>
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" value="<%= account.account_email %>" required />
  </div>

  <button type="submit">Update</button>
</form>
