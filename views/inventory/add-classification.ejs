<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <header class="top-header">
    <h1>CSE Motors</h1>
  </header>

  <main class="page container mt-4">

    <h2>Add New Classification</h2>

    <!-- Flash messages inline -->
    <% if (message && message.length > 0) { %>
      <% message.forEach(msg => { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% }) %>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (serverError && serverError.length > 0) { %>
      <div class="alert alert-server-error" role="alert">
        <ul>
          <% serverError.forEach(err => { %>
            <li><%= err %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/inv/add-classification" method="POST" novalidate>
      <div class="mb-3">
        <label for="classification_name" class="form-label">Classification Name</label>
        <input 
          type="text" 
          id="classification_name" 
          name="classification_name" 
          class="form-control" 
          value="<%= classification_name ? classification_name : '' %>"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Add Classification</button>
    </form>

  </main>

  <footer class="text-center mt-4 p-3 bg-dark text-white">
    &copy; 2025 CSE Motors
  </footer>

</body>
</html>
