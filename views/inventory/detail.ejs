<h1><%= title %></h1>

<div class="vehicle-detail-wrapper">
  <%- vehicleDetail %>
</div>

<% if (loggedin) { %>
  <button id="favoriteBtn" data-id="<%= inv_id %>">‚≠ê Favorite</button>
  <script>
    document.getElementById("favoriteBtn").addEventListener("click", async () => {
      const invId = document.getElementById("favoriteBtn").dataset.id;
      const res = await fetch(`/favorites/toggle/${invId}`, { method: "POST" });
      const data = await res.json();
      alert(data.message);
    });
  </script>
<% } %>
